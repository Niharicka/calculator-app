<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <TextView android:layout_width="match_parent"
              android:gravity="right"
              android:textSize="20dp"
              android:padding="20dp"
              android:id="@+id/text1"
              android:layout_height="wrap_content"/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="0"
              android:gravity="right"
              android:textSize="40sp"
              android:padding="20dp"
              android:textColor="#000"
              android:id="@+id/text2"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="5dp"
                  android:layout_gravity="bottom"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/layout1"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mod"
                    android:text="%"
                    android:padding="5dp"
                    android:textSize="25sp"
                    android:background="@null"
                    android:onClick="onClickMod"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sqrt"
                    android:text="√"
                    android:padding="5dp"
                    android:onClick="onClickSqrt"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expo"
                    android:text="⌫	"
                    android:textSize="25sp"
                    android:background="@null"
                    android:padding="5dp"
                    android:onClick="onClickBackspace"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clear"
                    android:text="C"
                    android:padding="5dp"
                    android:onClick="onClickClear"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:id="@+id/layout2"
                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seven"
                    android:text="7"
                    android:padding="5dp"
                    android:onClick="onClick7"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eight"
                    android:text="8"
                    android:padding="5dp"
                    android:onClick="onClick8"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nine"
                    android:text="9"
                    android:padding="5dp"
                    android:onClick="onClick9"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/divide"
                    android:text="/"
                    android:padding="5dp"
                    android:onClick="onClickDivide"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/layout3"
                      android:gravity="center"
                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/four"
                    android:text="4"
                    android:padding="5dp"
                    android:onClick="onClick4"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/five"
                    android:text="5"
                    android:padding="5dp"
                    android:onClick="onClick5"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/six"
                    android:text="6"
                    android:padding="5dp"
                    android:onClick="onClick6"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product"
                    android:text="*"
                    android:padding="5dp"
                    android:onClick="onClickProduct"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:id="@+id/layout4"
                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/one"
                    android:text="1"
                    android:padding="5dp"
                    android:onClick="onClick1"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/two"
                    android:text="2"
                    android:padding="5dp"
                    android:onClick="onClick2"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/three"
                    android:text="3"
                    android:padding="5dp"
                    android:onClick="onClick3"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtract"
                    android:text="-"
                    android:padding="5dp"
                    android:onClick="onClickSubtract"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/layout5"
                      android:gravity="center"

                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zero"
                    android:text="0"
                    android:padding="5dp"
                    android:onClick="onClick0"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point"
                    android:text="."
                    android:padding="5dp"
                    android:onClick="onClickPoint"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:padding="5dp"
                    android:onClick="onClickEqual"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addition"
                    android:text="+"
                    android:padding="5dp"
                    android:onClick="onClickAddition"
                    android:textSize="25sp"
                    android:background="@null"
                    android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
